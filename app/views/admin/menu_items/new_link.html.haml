.card
  = simple_form_for model, url: new_link_admin_menu_items_path do |f|
    .card-body
      = f.input :title_en
      = f.input :title_de
      = f.input :sort
      = f.input :use_namespace_for_active_detection, input_html: { class: 'no-validation' }
      = f.input :parent_id, as: :select, collection: op.parent_candidates, include_blank: '-'
      = f.input :page_attr, as: :select, collection: op.page_candidates, include_blank: '-'
    .card-footer
      = f.save