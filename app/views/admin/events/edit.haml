- provide :page_title, _('Event|Edit')

.card
  .card-body
    = simple_form_for model, url: admin_event_path(model) do |f|
      = f.input :title
      = f.input :location
      = f.label :published
      = f.input :published
      = f.input :description, input_html: { data: { preview_url: preview_markdown_admin_news_posts_path } }
      #event_dates
        = f.simple_fields_for :event_dates do |event_date|
          = render 'event_date_fields', f: event_date
        .links
          = link_to_add_association f, :event_dates, class: 'btn btn-primary' do
            = icon %i[fa fa-plus]
            =_('Event|Add event date')
      %hr
      = f.save