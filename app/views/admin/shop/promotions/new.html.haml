.card
  = simple_form_for [:admin, :shop, model] do |f|
    .card-body
      = f.input :name
      = f.input :active, input_html: { class: 'no-validation' }
      .row
        .col-md-6
          = f.input :code_type, collection: Promotion.code_types, include_blank: _('Form|Select|Blank')
        .col-md-6
          = f.input :reduction
      = f.association :products, as: :check_boxes
      .row
        .col-md-6
          = f.input :code_prefix
        .col-md-6
          = f.input :codes_to_generate
    .card-footer
      = f.save