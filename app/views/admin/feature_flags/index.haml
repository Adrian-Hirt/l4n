- provide :page_title, _('Admin|FeatureFlags')

.card
  .card-body
    = button _('FeatureFlag|Reinitialize'), reinitialize_admin_feature_flags_path, html: { method: :post }
    %hr
    %table{class: 'table table-striped'}
      %tr
        %th= _('FeatureFlag|Key')
        %th= _('FeatureFlag|Enabled')
        %th= _('FeatureFlag|Toggle')
        - op.flags.each do |flag|
          %tr
            %td= flag.key.humanize
            %td= flag.enabled
            - if flag.enabled
              %td
                = link_to toggle_admin_feature_flag_path(flag), method: :post do
                  = icon %i[fas fa-toggle-on]
            - else
              %td
                = link_to toggle_admin_feature_flag_path(flag), method: :post do
                  = icon %i[fas fa-toggle-off]