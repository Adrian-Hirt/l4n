%div{data: { component: 'ImageCropper' }}
  %input{type: 'file', id:'imageLoader', name: 'imageLoader'}
  %button{id: 'cropperUploadButton', data: { url: '/settings/avatar' }} Upload
  = button _('User|Remove avatar'), remove_avatar_settings_path, html: { data: { confirm: _('User|Avatar remove confirmation')}, method: :delete}, color: :danger
  %hr
  .div{style: 'width: 300px; height: 300px;'}
    - url = current_user.avatar.present? ? url_for(current_user.avatar) : nil
    %canvas{style: "border:1px solid #000000;", width: '300', height: '300', data: {initial: url}}
  %hr
  .cropperPreview{style: 'height: 300px; width: 300px; overflow: hidden;'}
  .cropperPreview{style: 'height: 100px; width: 100px; overflow: hidden;'}