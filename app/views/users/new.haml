.d-flex.justify-content-center
  .login-box.mx-auto
    .card.card-outline.card-primary
      .card-header.text-center
        %a.h1{href: root_path}
          %b> L4N
          Dev
      .card-body
        %p.login-box-msg= _('User|Sign up')
        = simple_form_for model, wrapper: :input_group do |f|
          = f.input :username, append: icon(%i[fa fa-user]), label: false, placeholder: _('User|Username')
          = f.input :email, append: icon(%i[fa fa-envelope]), label: false, placeholder: _('User|Email')
          = f.input :password, append: icon(%i[fa fa-lock]), label: false, placeholder: _('User|Password')
          = f.input :password_confirmation, append: icon(%i[fa fa-lock]), label: false, placeholder: _('User|Password confirmation')
          .mb-3
            = recaptcha_tags
          .input-group.mb-3
            = f.save _('User|Create account')
        %hr
          = button 'Back to application', root_path, btn_icon: %i[fas fa-arrow-left], color: :secondary