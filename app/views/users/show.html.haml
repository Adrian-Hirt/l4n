- provide :page_title, _('User|Profile')

.row
  .col-md-3
    .card.card-primary.card-outline
      .card-body.box-profile
        .text-center
          - if model.avatar.attached?
            = image_tag model.avatar.variant(:medium).processed, class: 'profile-user-img img-fluid img-circle'
          - else
            .avatar-medium-placeholder
        %h3.profile-username.text-center
          = model.username
        %p.text-muted.text-center
          Admin
    .card.card-primary
      .card-header
        = _('User|About me')
      .card-body
  .col-md-9
    .card
      .card-header.p2
        %ul.nav.nav-pills
          %li.nav-item
            %a.nav-link.active{href: '#game-profiles', data: { 'bs-toggle' => 'tab' }}
              = _('User|Game Profiles')
          %li.nav-item
            %a.nav-link{href: '#achievements', data: { 'bs-toggle' => 'tab' }}
              = _('User|Achievements')
      .card-body
        .tab-content
          .tab-pane.active#game-profiles
            .mb-3
              %h4 Steam
              = turbo_frame_tag 'steam_profile', src: gameaccounts_steam_path do
                .d-flex
                  .flex-shrink-0
                    .placeholder-glow
                      .placeholder.gameaccount-image
                  .flex-grow-1.ms-3
                    .placeholder-glow
                      %h4.d-block.placeholder.col-4 &nbsp;
                      .d-block.placeholder.col-4
            .mb-0
              %h4 Discord
              = turbo_frame_tag 'discord_profile', src: gameaccounts_discord_path do
                .d-flex
                  .flex-shrink-0
                    .placeholder-glow
                      .placeholder.gameaccount-image
                  .flex-grow-1.ms-3
                    .placeholder-glow
                      %h4.d-block.placeholder.col-4 &nbsp;
                      .d-block.placeholder.col-4
          .tab-pane#achievements
            ADD ACHIEVEMENTS HERE
