.d-flex.justify-content-center
  .login-box.mx-auto
    .card.card-outline.card-primary
      .card-header.text-center
        %a.h1{href: root_path}
          %b> L4N
          Dev
      .card-body
        %p.login-box-msg
          - if current_user.two_factor_enabled?
            = _('Settings|Enter password and two factor code to confirm destroying your account')
          - else
            = _('Settings|Enter password to confirm destroying your account')
        = simple_form_for :auth, wrapper: :input_group do |f|
          = f.input :password, append: icon(%i[fa fa-eye-slash fa-fw]), label: false, placeholder: _('User|Password'), input_html: { data: { component: 'PasswordVisibilityToggler' } }
          - if current_user.two_factor_enabled?
            = f.input :two_factor_code, label: false, placeholder: _('User|2FA code from authenticator')
          .input-group.mb-3
            = f.submit _('Session|Confirm'), class: %i[btn btn-danger], name: ''
        %hr
          = button _('Settings|Abort destroying my account'), settings_account_path, btn_icon: %i[fas fa-arrow-left], color: :secondary