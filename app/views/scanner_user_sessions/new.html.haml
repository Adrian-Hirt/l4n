.d-flex.justify-content-center
  .login-box.mx-auto
    .card.card-outline.card-primary
      .card-header.text-center
        %a.h1{href: root_path}
          %b> L4N
          Dev
      .card-body
        = simple_form_for resource, as: resource_name,
                                    url: session_path(resource_name),
                                    html: { data: { turbo: false} },
                                    wrapper: :input_group do |f|
          = f.input :name, label: false, placeholder: _('ScannerUser|Name'), input_html: { class: 'no-validation' }
          = f.password :password, label: false, placeholder: _('ScannerUser|Password'), input_html: { class: 'no-validation' }
          .input-group.mb-3
            = f.save _('Session|Log in')
        %hr
          = button _('Session|Back to application'), root_path, color: :secondary