.d-flex.justify-content-center
  .login-box.mx-auto
    .card.card-outline.card-primary
      .card-header.text-center
        %a.h1{href: root_path}
          %b> L4N
          Dev
      .card-body
        %p.login-box-msg= _('Session|Sign in')
        = simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { data: { turbo: false}, method: :put } do |f|
          = f.input :reset_password_token, as: :hidden
          = f.full_error :reset_password_token

          = f.input :password, label: false,
                               placeholder: _('User|New Password'),
                               hint: _('PasswordReset|%{min_chars} characters minimum') % { min_chars: @minimum_password_length } if @minimum_password_length
          = f.input :password_confirmation, label: false,
                                            placeholder: _('User|New Password confirmation')
          .input-group.mb-3
            = f.save _('PasswordReset|Update password')
        %hr
          = button _('Session|Back to application'), root_path, color: :secondary