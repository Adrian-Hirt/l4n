.d-flex.justify-content-center
  .login-box.mx-auto
    .card.card-outline.card-primary
      .card-header.text-center
        %a.h1{href: root_path}
          %b> L4N
          Dev
      .card-body
        %p.login-box-msg= _('Session|Sign in')
        = simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { data: { turbo: false} } do |f|
          = f.input :email, label: false, placeholder: _('User|Email')
          .input-group.mb-3
            = f.save _('PasswordReset|Request reset')
        %hr
          = button _('Session|Back to application'), root_path, color: :secondary