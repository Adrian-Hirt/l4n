.d-flex.justify-content-center
  .login-box.mx-auto
    .card.card-outline.card-primary
      .card-header.text-center
        %a.h1{href: root_path}
          %b> L4N
          Dev
      .card-body
        %p.login-box-msg= _('Session|2FA authentication')
        = simple_form_for resource, as: resource_name,
                                    url: session_path(resource_name),
                                    html: { data: { turbo: false} },
                                    method: :post do |f|
          = f.input :otp_attempt, label: false, placeholder: _('Session|2FA code from authenticator')
          .input-group.mb-3
            = f.save _('Session|Submit 2FA code')
        %hr
          = button _('Session|Back to application'), root_path, color: :secondary