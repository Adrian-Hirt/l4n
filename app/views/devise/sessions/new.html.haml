.d-flex.justify-content-center
  .login-box.mx-auto
    .card.card-outline.card-primary
      .card-header.text-center
        %a.h1{href: root_path}
          %b> L4N
          Dev
      .card-body
        %p.login-box-msg= _('Session|Sign in')
        = simple_form_for resource, as: resource_name,
                                    url: session_path(resource_name),
                                    html: { data: { turbo: false} },
                                    wrapper: :input_group do |f|
          = f.input :email, label: false, placeholder: _('User|Email'), input_html: { class: 'no-validation' }
          = f.password :password, label: false, placeholder: _('User|Password'), input_html: { class: 'no-validation' }
          - if devise_mapping.rememberable?
            .input-group
              = f.input :remember_me, as: :boolean,
                                      label: _('Session|Remember me'),
                                      input_html: { class: 'checkbox-primary no-validation' }
          .input-group.mb-3
            = f.save _('Session|Log in')
        %hr
        %p.mb-1.mt-2
          = link_to _('Session|Forgot password'), new_password_path(resource_name)
        %hr
          = button _('Session|Back to application'), root_path, color: :secondary