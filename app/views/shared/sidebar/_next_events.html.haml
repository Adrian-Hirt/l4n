.card.mb-3
  .card-header
    = _('Sidebar|Next events')
  .card-body
    - events.each_with_index do |event, index|
      - unless index.zero?
        %hr

      %h5.mb-0= link_to event.title, event
      %small.text-muted
        - if event.next_date.location.present?
          = "#{l(event.next_date.start_date, format: '%d. %b, %H:%M')}, #{_('Event|Location')}: #{event.next_date.location}"
        - else
          = l(event.next_date.start_date, format: '%d. %b, %H:%M')
  .card-footer
    = button _('Sidebar|All events'), events_path, size: :sm, color: :default
