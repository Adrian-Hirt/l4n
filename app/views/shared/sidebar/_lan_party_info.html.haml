.card.mb-3
  .card-header
    = _('Sidebar|Next lan')
  .card-body
    %h3= lan_party.name
    .mb-3
      .text-muted= _('Sidebar|Available tickets')
      = lan_party_progress_bar(lan_party)
    .mb-1
      .text-muted= _('Sidebar|Lan start')
      = l lan_party.event_start
    %div
      .text-muted= _('Sidebar|Lan end')
      = l lan_party.event_end
    - if lan_party.location.present?
      .mt-1
        .text-muted= _('Sidebar|Lan location')
        = l lan_party.location
